<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>boku - Opskrifter og meget mere</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/gravatar")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-static-top" style="padding-bottom: 50px">
        <div class="navbar-inner">
            <div class="container">
                <!-- Be sure to leave the brand out there if you want it shown -->
                <a class="brand" href="#">boku</a>

                <!-- Everything you want hidden at 940px or less, place within here -->
                <div class="nav-collapse">
                    <ul class="nav pull-right">
                        @Html.Partial("_LoginPartial")
                        @Html.Partial("_UserMenu")
                        <li class="divider-vertical"></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hjælp<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Om Boku</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li>
                                @Html.ActionLink("Opskrifter", "Index", "Recipes")
                            </li>
                            <li class="divider-vertical"></li>
                            <li>
                                @Html.ActionLink("Madplaner", "Index", "Plans")
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()    
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
<footer>
    <div class="container">
        <ul class="nav nav-list">
            <li class="divider"></li>
        </ul>
        <div class="row" style="text-align: center">
            <div class="span12">
                <ol class="row-fluid">
                    <li class="span12">boku ©2012 by Mads <a href="madstt.dk">madstt.dk</a></li>
                </ol>
            </div>
        </div>
    </div>
</footer>
