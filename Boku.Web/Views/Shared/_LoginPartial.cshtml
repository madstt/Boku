@model Boku.Web.Models.LoginModel

@if (Request.IsAuthenticated)
{
    <ul class="nav">
        <li>
            <p id="gravatar" class="navbar-text" style="padding-right: 10px" />
        </li>
        <li>
            <p class="navbar-text">
                Velkommen, @Html.DisplayFor(user => User.Identity.Name)!
            </p>
        </li>
    </ul>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#gravatar').empty().append($.gravatar('@Model.Email', {size: 30}));
        });
    </script>
}
else
{
    <li class="dropdown" id="loginMenu">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#loginMenu">Login
                                <b class="caret"></b>
        </a>
        <div class="dropdown-menu">
            @using (Html.BeginForm("Login", "Account"))
            {
                <fieldset class='textbox' style="padding: 10px">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Brugernavn" })
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                    <input class="button" type="submit" value="Log ind" />
                </fieldset>
            }
        </div>
    </li>

}